<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:context="com.example.flushtooll.OnlyReadActivity"
    >

    <RelativeLayout
        android:id="@+id/only_read_container"
        style="@style/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/only_read_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只读测试"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/divide_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/only_read_container"
        android:background="@color/gray"/>

    <RelativeLayout
        android:id="@+id/loop_container"
        style="@style/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line1">

        <TextView
            android:id="@+id/loop_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="循环次数"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/loop_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loop_count_text"
            android:text="10000"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/divide_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/loop_container"
        android:background="@color/gray"/>

    <RelativeLayout
        android:id="@+id/file_size_container"
        style="@style/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line2">

        <TextView
            android:id="@+id/file_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件大小(MB)"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_size_text"
            android:text="200"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/divide_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/file_size_container"
        android:background="@color/gray"/>

    <RelativeLayout
        android:id="@+id/check_period_container"
        style="@style/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line3"
        android:visibility="visible">

        <TextView
            android:id="@+id/check_period_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校验周期"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/check_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_period_text"
            android:text="10000"/>
    </RelativeLayout>
</RelativeLayout>
